<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.aplas.frozenfood">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FrozenFood">
        <activity
            android:name=".HalamanDepan"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.aplas.frozenfood.makanan.KentangActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.BaksoActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.UdangActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.TempuraActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.AyamActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.DagingActivity"
            android:exported="true" />
        <activity
            android:name="org.aplas.frozenfood.makanan.InfoActivity"
            android:exported="true" />
        <activity
            android:name=".SummaryActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"/>


        <provider
            android:authorities="org.aplas.frozenfood"
            android:name=".Database.OrderProvider"
            android:exported="true"/>
    </application>

</manifest>